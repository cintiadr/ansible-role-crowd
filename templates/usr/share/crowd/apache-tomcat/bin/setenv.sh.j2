# This file is managed by Ansible, any changes made by hand will be overritten.

JAVA_OPTS="-Xms{{ crowd_jvm_minimum_memory }} -Xmx{{ crowd_jvm_maximum_memory }} -XX:MaxPermSize=256m -Dfile.encoding=UTF-8 {{ crowd_jvm_support_recommended_args }} $JAVA_OPTS"

JAVA_OPTS="-Dcrowd.home={{ crowd_home }} $JAVA_OPTS"

export JAVA_OPTS

# set the location of the pid file
if [ -z "$CATALINA_PID" ] ; then
    if [ -n "$CATALINA_BASE" ] ; then
        CATALINA_PID="$CATALINA_BASE"/apache-tomcat/work/catalina.pid
    elif [ -n "$CATALINA_HOME" ] ; then
        CATALINA_PID="$CATALINA_HOME"/apache-tomcat/work/catalina.pid
    fi
fi
export CATALINA_PID
